{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2023"],
    "moduleResolution": "Bundler",
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "stripInternal": true,
    "pretty": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./src", "rollup.config.ts"],
  "exclude": ["dist", "lib", "node_modules"]
}
